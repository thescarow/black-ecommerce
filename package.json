{
  "name": "black-ecommerce",
  "version": "1.0.0",
  "description": "Black Ecommerce",
  "main": "server/index.js",
  "scripts": {
    "install": "npm run install:client && npm run install:api",
    "install:client": "cd client && npm install",
    "install:api": "cd api && npm install",
    "build": "npm run build:client",
    "build:client": "cd client && npm run build",
    "start": "cd api && npm start",
    "dev": "npm-run-all --parallel dev:client dev:api",
    "dev:client": "cd client && npm run dev",
    "dev:api": "cd api && npm run dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thescarow/black-ecommerce.git"
  },
  "keywords": [
    "node",
    "express",
    "mongoose",
    "react",
    "redux",
    "redux-thunk",
    "webpack"
  ],
  "author": "Mohamed Samara (https://github.com/thescarow)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thescarow/black-ecommerce/issues"
  },
  "homepage": "https://github.com/thescarow/black-ecommerce#readme",
  "devDependencies": {
    "cross-env": "^5.2.1",
    "npm-run-all": "^4.1.5"
  }
}
